<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="642dp"
        android:layout_height="100dp"
        android:orientation="Horizontal">

    <ImageView
        android:layout_width="86dp"
        android:layout_height="100dp"
        android:src="@drawable/symbol" />

    <TextView
        android:id="@+id/textEmailVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="56dp"
        android:text="Edit profile"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textResendCode"
        android:layout_width="100"
        android:layout_height="50"
        android:layout_marginTop="20dp"
        android:text="Save changes"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:textColor="#FF5722"
        android:textSize="20sp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
        </LinearLayout>








        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textSize="17sp" />

        <EditText

            android:id="@+id/getName"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="13dp"
            android:background="#2D000000"
            android:ems="10"
            android:hint="Daud"
            android:inputType="text"
            android:paddingLeft="14dp" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textSize="17sp" />

        <EditText

            android:id="@+id/getEmail"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="13dp"
            android:background="#2D000000"

            android:ems="10"
            android:hint="Daud@gmail.com"
            android:inputType="text"
            android:paddingLeft="14dp" />

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="Contact number"
            android:textSize="17sp" />

        <EditText

            android:id="@+id/getEmail3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="13dp"
            android:background="#2D000000"

            android:ems="10"
            android:hint="12345678"
            android:inputType="text"
            android:paddingLeft="14dp" />

        <TextView
            android:id="@+id/countryContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="Country"
            android:textSize="17sp" />

        <EditText

            android:id="@+id/getcountry3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="13dp"
            android:background="#2D000000"

            android:ems="10"
            android:hint="Pakistan"
            android:inputType="text"
            android:paddingLeft="14dp" />


        <TextView
            android:id="@+id/cityContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="City"
            android:textSize="17sp" />

        <EditText

            android:id="@+id/getcity3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="13dp"
            android:background="#2D000000"

            android:ems="10"
            android:hint="Islamabad"
            android:inputType="text"
            android:paddingLeft="14dp" />






    </LinearLayout>
