<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".MainActivity17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:background="#BCB2B2"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caller Name"
            android:layout_marginLeft="110dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:58"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:textColor="@color/black"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.3">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:background="#B9B2B2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_baseline_circle_24"
                android:src="@drawable/ic_baseline_mic_off_24"
                android:scaleType="center"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_baseline_circle_24"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_baseline_videocam_off_24"
                android:scaleType="center"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_baseline_circle_24"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_baseline_pause_circle_24"
                android:scaleType="center"/>



        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/redcircle"
            android:src="@drawable/ic_baseline_close_24"
            android:scaleType="center"/>




    </LinearLayout>

</LinearLayout>