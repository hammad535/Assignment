<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Email Verification Text -->

    <!-- Leftward Arrow Icon -->


    <!-- Enter the Code Sent to Your Email Text -->

    <ImageView
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:src="@drawable/symbol" />

    <TextView
        android:id="@+id/textEmailVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:text="Email Verification"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textEnterCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmailVerification"
        android:layout_marginTop="16dp"
        android:text="Enter the code sent to your email"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <!-- Resend Code in 23 Seconds Text -->
    <TextView
        android:id="@+id/textResendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEnterCode"
        android:layout_marginTop="8dp"
        android:text="Resend code in 23 seconds"
        android:textColor="#FF5722"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <!-- Code Input Boxes -->
    <LinearLayout
        android:id="@+id/codeInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textResendCode"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- 6 Square Boxes for Code Input -->
        <!-- (No changes to these EditText elements) -->

        <!-- Code Input Boxes -->
        <LinearLayout
            android:id="@+id/codeInputtLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textResendCode"

            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <!-- 6 Square Boxes for Code Input -->
            <EditText
                android:layout_marginLeft="12dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:id="@+id/editText1"
                android:background="@drawable/square_edittext_background"/>

            <EditText

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="18dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:id="@+id/editText2"
                android:background="@drawable/square_edittext_background"/>

            <EditText
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="18dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:id="@+id/editText3"
                android:background="@drawable/square_edittext_background"/>

            <EditText
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="18dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:id="@+id/editText4"
                android:background="@drawable/square_edittext_background"/>

            <EditText
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="18dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:id="@+id/editText5"
                android:background="@drawable/square_edittext_background"/>

            <EditText
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:id="@+id/editText6"
                android:background="@drawable/square_edittext_background"/>

        </LinearLayout>

    </LinearLayout>


    <!-- Number Keyboard -->
        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/keyboard_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_below="@+id/codeInputLayout"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <!-- Number Buttons -->
            <Button

                android:id="@+id/button_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="1"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/button_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="2"
                android:layout_marginRight="29dp"
                android:textSize="20sp"
                android:gravity="center"/>
            <Button
                android:id="@+id/button_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="3"
                android:layout_marginRight="22dp"
                android:textSize="20sp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="4"
                android:textSize="20sp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="22dp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="5"
                android:layout_marginRight="22dp"
                android:textSize="20sp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="6"
                android:layout_marginRight="22dp"
                android:textSize="20sp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="7"
                android:textSize="20sp"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="22dp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="8"
                android:layout_marginRight="22dp"
                android:textSize="20sp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="9"
                android:layout_marginRight="22dp"
                android:textSize="20sp"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="0"
                android:layout_marginRight="22dp"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:gravity="center"/>
            <Button
                android:layout_marginTop="16dp"
                android:id="@+id/button_10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circular_button"
                android:text="0"
                android:layout_marginRight="22dp"
                android:textSize="20sp"
                android:layout_marginLeft="7dp"
                android:gravity="center"/>
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cross"
                android:layout_column="2"
                android:layout_row="3"
                android:scaleType="fitCenter"/>

            <!-- Add buttons for numbers 2 to 9 similarly -->

        </GridLayout>







</RelativeLayout>
